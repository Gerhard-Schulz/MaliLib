@using MaliLb.Models;
@model IEnumerable<Genre>

@{
    ViewData["Title"] = "Жанры";
}

<h2 class="text-center text-primary mt-4">Жанры <a asp-controller="Genre" asp-action="Add" class="btn btn-outline-success"><i class="bi bi-plus-lg"></i></a></h2>
<table class="table table-hover w-100 mt-3 pb-2 cell-centered">
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>
                    @genre.Name                     
                    <div class="btn-group" role="group">
                        <a asp-controller="Genre" asp-action="Edit" asp-route-id="@genre.ID" class="btn btn-outline-warning"><i class="bi bi-pen"></i></a>
                        <a asp-controller="Genre" asp-action="Delete" asp-route-id="@genre.ID" class="btn btn-outline-danger"><i class="bi bi-trash3"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>