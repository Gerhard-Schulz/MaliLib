@model List<Visitor>

@{
    ViewData["Title"] = "Читатели";
}

<div class="row cell-centered w-100">
    <div class="col mt-5">
        <a asp-action="Index" class="btn btn-outline-dark">Сбросить фильтр</a>
    </div>
    <div class="col-6">
        <h2 class="text-center text-primary mt-4 pt-3">Читатели <a asp-controller="Visitor" asp-action="Add" class="btn btn-outline-success"><i class="bi bi-plus-lg"></i></a></h2>
    </div>
    <div class="col">
        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p class="mt-5">
                    <strong class="w-100 pb-1" style="font-size: 1.1rem">Поиск:</strong>
                    <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="w-50 border-primary" />
                    <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i></button>
                </p>
            </div>
        </form>
    </div>
</div>
<table class="table table-hover w-100 mt-3 pb-2 cell-centered">
    <thead>
        <tr class="table-light">
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["NumSortParm"]" class="link link-primary page-link">Номер читательского билета</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" class="link link-primary page-link">ФИО</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var visitor in Model)
        {
            <tr>
                <td>
                    @visitor.СardNumber
                </td>
                <td>
                    <div class="row justify-content-center">
                        <div class="col"></div>
                        <div class="col-6">
                            @visitor.Name
                        </div>
                        <div class="col">
                            <div class="btn-group" role="group">
                                <a asp-controller="Visitor" asp-action="Edit" asp-route-id="@visitor.ID" class="btn btn-outline-warning"><i class="bi bi-pen"></i></a>
                                <a asp-controller="Visitor" asp-action="Delete" asp-route-id="@visitor.ID" class="btn btn-outline-danger"><i class="bi bi-trash3"></i></a>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>